@model List<ProductViewModel>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Inverse table</h4>
                <p class="card-description">
                    Add class <code>.table-dark</code>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Rate
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model??[])
                            {
                                <tr>
                                    <td>
                                        <img src="@item.CoverImageUrl" />
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.Rate
                                    </td>
                                    <td>
                                        <a asp-controller="product" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                        <a asp-controller="product" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-controller="product" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        <a asp-controller="productimages" asp-action="details" asp-route-productId="@item.Id" class="btn btn-danger">Images</a>
                                    </td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>