@model ProductCreateViewModel
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Cover image</label>
                    <input asp-for="CoverImageFile" class="form-control">
                </div>
                <div class="form-group">
                    <label>Hover image</label>
                    <input asp-for="HoverImageFile" class="form-control">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" class="form-control">
                </div>
                <div class="form-group">
                    <label>Count</label>
                    <input asp-for="Count" class="form-control">
                </div>
                <div class="form-group">
                    <label>Code</label>
                    <input asp-for="Code" class="form-control">
                </div>
                <div class="form-group">
                    <label>Code</label>
                    <select asp-for="CategoryId" asp-items="Model?.CategoryList" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Images</label>
                    <input asp-for="Images" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a   asp-controller="product" asp-action="index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>